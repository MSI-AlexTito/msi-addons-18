<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree View -->
    <record id="view_certification_envelope_tree" model="ir.ui.view">
        <field name="name">l10n_cl_edi.certification.envelope.tree</field>
        <field name="model">l10n_cl_edi.certification.envelope</field>
        <field name="arch" type="xml">
            <list string="Sobres de Env칤o" decoration-info="state=='draft'" decoration-primary="state=='created'" decoration-success="state in ['signed','sent','accepted']" decoration-danger="state=='rejected'">
                <field name="name"/>
                <field name="project_id"/>
                <field name="documents_count" string="Docs"/>
                <field name="creation_date"/>
                <field name="sii_track_id"/>
                <field name="sii_send_date"/>
                <field name="state" widget="badge" decoration-info="state=='draft'" decoration-primary="state=='created'" decoration-success="state in ['signed','sent','accepted']" decoration-danger="state=='rejected'"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_certification_envelope_form" model="ir.ui.view">
        <field name="name">l10n_cl_edi.certification.envelope.form</field>
        <field name="model">l10n_cl_edi.certification.envelope</field>
        <field name="arch" type="xml">
            <form string="Sobre de Env칤o DTE">
                <header>
                    <button name="action_create_envelope" string="Crear Sobre" type="object"
                            invisible="state != 'draft'" class="oe_highlight"/>
                    <button name="action_sign_envelope" string="Firmar Sobre" type="object"
                            invisible="state != 'created'" class="oe_highlight"/>
                    <button name="action_validate_envelope" string="Validar Sobre" type="object"
                            invisible="state != 'signed'"/>
                    <button name="action_send_to_sii" string="Enviar a SII" type="object"
                            invisible="state != 'signed'" class="oe_highlight"/>
                    <button name="action_check_sii_status" string="Consultar Estado en SII" type="object"
                            invisible="state not in ('sent','accepted','rejected')"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,created,signed,sent,accepted"/>
                </header>

                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_documents" type="object" class="oe_stat_button" icon="fa-file-text-o">
                            <field name="documents_count" widget="statinfo" string="Documentos"/>
                        </button>
                    </div>

                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Ej: Env칤o SET B츼SICO 4606907"/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="project_id" options="{'no_create': True}"/>
                            <field name="creation_date"/>
                        </group>
                        <group>
                            <field name="sii_track_id" readonly="1"/>
                            <field name="sii_send_date" readonly="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Documentos" name="documents">
                            <field name="generated_document_ids" widget="many2many" domain="[('project_id', '=', project_id), ('state', 'in', ['signed', 'validated'])]">
                                <list decoration-success="state=='signed'" decoration-info="state=='validated'">
                                    <field name="complete_name"/>
                                    <field name="document_type_id"/>
                                    <field name="folio"/>
                                    <field name="issue_date"/>
                                    <field name="total_amount" sum="Total"/>
                                    <field name="state" widget="badge"/>
                                </list>
                            </field>
                            <div class="alert alert-info mt-3" role="alert">
                                <p><strong>游늷 Instrucciones:</strong></p>
                                <ul>
                                    <li>Selecciona los documentos que deseas incluir en este sobre</li>
                                    <li>Todos los documentos deben estar <strong>firmados</strong></li>
                                    <li>Puedes incluir m칰ltiples tipos de documentos en un mismo sobre</li>
                                    <li>El sobre agrupar치 los documentos en un solo XML (EnvioDTE)</li>
                                </ul>
                            </div>
                        </page>

                        <page string="XML del Sobre" name="xml">
                            <group>
                                <group>
                                    <field name="envelope_xml" filename="envelope_xml_filename"/>
                                    <field name="envelope_xml_filename" invisible="1"/>
                                </group>
                                <group>
                                    <field name="envelope_xml_signed" filename="envelope_xml_signed_filename"/>
                                    <field name="envelope_xml_signed_filename" invisible="1"/>
                                </group>
                            </group>
                        </page>

                        <page string="Validaci칩n" name="validation">
                            <field name="validation_messages" placeholder="Los mensajes de validaci칩n aparecer치n aqu칤..."/>
                        </page>

                        <page string="Respuesta SII" name="sii_response" invisible="not sii_response_id">
                            <group>
                                <field name="sii_response_id" readonly="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_certification_envelope_search" model="ir.ui.view">
        <field name="name">l10n_cl_edi.certification.envelope.search</field>
        <field name="model">l10n_cl_edi.certification.envelope</field>
        <field name="arch" type="xml">
            <search string="Buscar Sobres de Env칤o">
                <field name="name"/>
                <field name="project_id"/>
                <field name="sii_track_id"/>
                <separator/>
                <filter string="Borrador" name="draft" domain="[('state','=','draft')]"/>
                <filter string="Creado" name="created" domain="[('state','=','created')]"/>
                <filter string="Firmado" name="signed" domain="[('state','=','signed')]"/>
                <filter string="Enviado" name="sent" domain="[('state','=','sent')]"/>
                <filter string="Aceptado" name="accepted" domain="[('state','=','accepted')]"/>
                <filter string="Rechazado" name="rejected" domain="[('state','=','rejected')]"/>
                <separator/>
                <group expand="0" string="Agrupar Por">
                    <filter string="Proyecto" name="group_project" context="{'group_by':'project_id'}"/>
                    <filter string="Estado" name="group_state" context="{'group_by':'state'}"/>
                    <filter string="Fecha Creaci칩n" name="group_date" context="{'group_by':'creation_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_certification_envelope" model="ir.actions.act_window">
        <field name="name">Sobres de Env칤o</field>
        <field name="res_model">l10n_cl_edi.certification.envelope</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_sent': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear un Sobre de Env칤o
            </p>
            <p>
                Los sobres agrupan m칰ltiples DTEs en un solo archivo XML (EnvioDTE) para enviar al SII.
            </p>
        </field>
    </record>

</odoo>
