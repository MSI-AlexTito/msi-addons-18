<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <!-- Categoría de Módulo -->
        <record id="module_category_certification" model="ir.module.category">
            <field name="name">Certificación SII</field>
            <field name="description">Gestión de Certificación de Facturación Electrónica ante SII Chile</field>
            <field name="sequence">20</field>
        </record>

        <!-- Grupo: Visor de Certificación -->
        <record id="group_certification_viewer" model="res.groups">
            <field name="name">Certificación SII: Visor</field>
            <field name="category_id" ref="module_category_certification"/>
            <field name="comment">Solo lectura de proyectos de certificación</field>
        </record>

        <!-- Grupo: Usuario de Certificación -->
        <record id="group_certification_user" model="res.groups">
            <field name="name">Certificación SII: Usuario</field>
            <field name="category_id" ref="module_category_certification"/>
            <field name="implied_ids" eval="[(4, ref('group_certification_viewer'))]"/>
            <field name="comment">Puede crear y gestionar proyectos de certificación</field>
        </record>

        <!-- Grupo: Administrador de Certificación -->
        <record id="group_certification_manager" model="res.groups">
            <field name="name">Certificación SII: Administrador</field>
            <field name="category_id" ref="module_category_certification"/>
            <field name="implied_ids" eval="[(4, ref('group_certification_user'))]"/>
            <field name="comment">Acceso completo al módulo de certificación</field>
        </record>

        <!-- Reglas de Registro: Proyectos -->
        <record id="certification_project_rule_user" model="ir.rule">
            <field name="name">Proyectos de Certificación: Usuario</field>
            <field name="model_id" ref="model_l10n_cl_edi_certification_project"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_certification_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="certification_project_rule_manager" model="ir.rule">
            <field name="name">Proyectos de Certificación: Administrador</field>
            <field name="model_id" ref="model_l10n_cl_edi_certification_project"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_certification_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Reglas de Registro: Casos de Prueba -->
        <record id="certification_case_rule_user" model="ir.rule">
            <field name="name">Casos de Prueba: Usuario</field>
            <field name="model_id" ref="model_l10n_cl_edi_certification_case"/>
            <field name="domain_force">[('project_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_certification_user'))]"/>
        </record>

        <record id="certification_case_rule_manager" model="ir.rule">
            <field name="name">Casos de Prueba: Administrador</field>
            <field name="model_id" ref="model_l10n_cl_edi_certification_case"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_certification_manager'))]"/>
        </record>

        <!-- Reglas de Registro: Documentos Generados -->
        <record id="certification_document_rule_user" model="ir.rule">
            <field name="name">Documentos Generados: Usuario</field>
            <field name="model_id" ref="model_l10n_cl_edi_certification_generated_document"/>
            <field name="domain_force">[('project_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_certification_user'))]"/>
        </record>

        <record id="certification_document_rule_manager" model="ir.rule">
            <field name="name">Documentos Generados: Administrador</field>
            <field name="model_id" ref="model_l10n_cl_edi_certification_generated_document"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_certification_manager'))]"/>
        </record>

        <!-- Reglas de Registro: Sobres -->
        <record id="certification_envelope_rule_user" model="ir.rule">
            <field name="name">Sobres de Envío: Usuario</field>
            <field name="model_id" ref="model_l10n_cl_edi_certification_envelope"/>
            <field name="domain_force">[('project_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_certification_user'))]"/>
        </record>

        <record id="certification_envelope_rule_manager" model="ir.rule">
            <field name="name">Sobres de Envío: Administrador</field>
            <field name="model_id" ref="model_l10n_cl_edi_certification_envelope"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_certification_manager'))]"/>
        </record>

        <!-- Templates de Casos: Solo lectura para usuarios, escritura para managers -->
        <record id="test_case_template_rule_all" model="ir.rule">
            <field name="name">Plantillas de Casos: Todos</field>
            <field name="model_id" ref="model_l10n_cl_edi_test_case_template"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_certification_viewer'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="test_case_template_rule_manager" model="ir.rule">
            <field name="name">Plantillas de Casos: Administrador</field>
            <field name="model_id" ref="model_l10n_cl_edi_test_case_template"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_certification_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

    </data>
</odoo>
